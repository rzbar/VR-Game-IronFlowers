#ifndef COMMON_NUMBERS_IN_MATH
#define COMMON_NUMBERS_IN_MATH

//PI
#define PI                  3.14159265 //pi
#define PI_DOUBLE           6.28318530 //double pi
#define PI_HALF             1.57079632 //one-half pi
#define PI_THIRD            1.04719755 //one-third pi
#define PI_QUARTER          0.78539816 //one-quarter pi
#define PI_FIFTH            0.62831853 //one-fifth pi
#define PI_SIXTH            0.52359877 //one-sixth pi

//E
#define E                   2.71828182 //natural constant -- e

//Epsilon
#define EPSILON             0.00000001 //epsilon
#define EPSILON_ONE_MINUS   0.99999999 //1 - epsilon

//square root
#define Sqrt2               1.41421356 //the square root of 2
#define Sqrt3               1.73205080 //the square root of 3
#define Sqrt2_INVERSE       0.70710678 //the inverse of the square root of 2
#define Sqrt3_INVERSE       0.57735026 //the inverse of the square root of 3

//radians and degrees
#define RAD_TO_DEG          57.2957795 //radians to degrees
#define DEG_TO_RAD          0.01745329 //degrees to radians

#endif